{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:react/recommended"
  ],
	"env": {
		"browser": true,
    "es2021": true,
    "jest": true
	},
  "globals": {
    "__webpack_hash__": "readonly",
    "__webpack_devmode__": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
	"plugins": [
		"react"
	],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
	"rules": {
    "react/jsx-one-expression-per-line": 0,
    "object-curly-newline": 0,
    "import/prefer-default-export": ["off"],
    "no-plusplus": "off"
	}
}